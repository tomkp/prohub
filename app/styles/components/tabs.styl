.tabs
  font-family: $font-Carrois
  width 100%
  height 100%
  float none
  list-style none
  position relative
  margin 0px
  text-align left

  li
    float left
    display block
    background white

  .tab-content
    z-index 2
    visibility hidden
    background #fafafa
    opacity 0
    overflow hidden
    width 100%
    height 100%
    font-size 17px
    line-height 25px
    padding 25px
    position absolute
    top 44px
    left 0
    transition: all .2s

  p
    &.link
      clear both
      margin 380px 0 0 15px

    a
      text-decoration none
      display inline-block
      color #fff
      padding 5px 10px
      margin 0 5px
      color: $blue

  input[type="radio"]
    position absolute
    top -9999px
    left -9999px

  label
    display block
    padding 14px 21px
    border-radius 2px 2px 0 0
    font-size 16px
    font-weight normal
    cursor pointer
    position relative
    margin-left: 20px
    &:hover
      color: $blue

  [id^="tab"]:checked + label
    color: #666
    background #fafafa

  [id^="tab"]:checked ~ [id^="tab-content"]
    visibility visible
    opacity 1
    background #fafafa

