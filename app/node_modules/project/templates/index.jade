section.project

  header
    h1
      a.org(href='/home')= org
      span.projectname

  != summarybar

  ul.unstyled.tabs
    li
      input#tab0(type='radio', name='tabs', checked='')
      label(for='tab0') Repos
      #tab-content0.tab-content
    
        ul.unstyled.repos

    li
      input#tab1(type='radio', name='tabs')
      label(for='tab1') Issues By Milestone
      #tab-content1.tab-content

        .datebar-container
          .datebar
            .progress

        #milestonesChart.chart

    li
      input#tab2(type='radio', name='tabs')
      label(for='tab2') Contributions
      #tab-content2.tab-content

        #contributionsChart.chart

        .contributors

  .button-group
    input.ss-icon.add(type="button" value="plus", title="Add Repo")
    input.ss-icon.refresh(type="button" value="sync", title="Fetch Github Data")

  .emptystate
    p You haven't added any repositories.

.modal
  .modal-content
    div
      p Please specify the github org or user and repository that you would like to add.
      input.repo-name(type="text", placeholder="name/project")
      .response
        p 
      .button-group
        input.button.modal-close(type="button", value="Close")
        input.button.modal-ok(type="button", value="ok")

.modal-overlay

.loading
  h2 Loading Github data...
  .loader
    .progress
  .loaded

